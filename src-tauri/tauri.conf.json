{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hakawati",
  "version": "0.2.2",
  "identifier": "dev.hakawati.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hakawati",
        "width": 1280,
        "height": 720,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["app", "appimage", "dmg", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../THIRD_PARTY_LICENSES.json": "LICENSES/THIRD_PARTY_LICENSES.json",
      "../THIRD_PARTY_LICENSES-rust.md": "LICENSES/THIRD_PARTY_LICENSES-rust.md",
      "../LICENSE": "LICENSES/LICENSE"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:hakawati.db"]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIzNEM5RUM2NDZBNzU4REQKUldUZFdLZEd4cDVNSTBqZTRmcUJZRXJ4eGlaMlpLaEs4ZGlRQnA0TlE5V1dQYUx6NDlhMXBRVWwK",
      "endpoints": [
        "https://github.com/rakanssh/hakawati/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
